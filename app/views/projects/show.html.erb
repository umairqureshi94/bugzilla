<div class="project-all">
<h1><strong>Project Detail </strong></h1>

<table class="table">
  <tr>
  	<th>Project ID</th>
    <th>Title</th>
    <th>Description</th>
    <th> </th>
    <th> </th>
    <th> </th>
    <th> </th>
  </tr>

    <tr>
    	<td><%= @project.id %></td>
      <td><%= @project.title %></td>
      <td><%= @project.description %></td>

      <td><%= link_to 'Edit' , edit_project_path(@project), class: "btn btn-info" if policy(Project).edit? %></td>
        <td><%= link_to 'Delete' ,project_path(@project), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you Sure?'}  if policy(Project).destroy? %></td>

        <td><%= link_to 'Report Bug', new_project_bug_path(@project), class: "btn btn-danger" if policy(Bug).new? %></td>
      <td><%= link_to 'Project Users' , project_users_path(@project), class: "btn btn-success" if policy(Project).users? %></td>
    </tr>
</table>
</div>

<% if @project.bugs.count > 0 %>
<div class = "project-all">

<h2>Features & Bugs List</h2>
<table class= "table table-hover">
  <tr>
    <th>Title</th>
    <th>Desription</th>
    <th>Type</th>
    <th>Deadline</th>
     <th>Status</th>
    <th>Image</th>
    <th>Assigned To</th>
    <th>Email ID</th>
  </tr>
<%= render @project.bugs  %>
</table>
<% end %>
</div>

