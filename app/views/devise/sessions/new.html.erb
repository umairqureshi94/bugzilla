
<div class="contact-form">
<h1>Log in</h1>
 <div class = "alert-message" > <%= alert %> </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="txtb">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "Enter your email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="txtb">
    <label> <%= f.label :password %> </label><br />
    <%= f.password_field :password, placeholder: "Enter your Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
   
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>

  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn-signup" %>
  </div>
  </br>

   <%= render "devise/shared/links" %>
<% end %>
</div>

