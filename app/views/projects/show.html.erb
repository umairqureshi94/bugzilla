<h1> Project Detail </h1>

<table>
  <tr>
  	<th>Project ID</th>
    <th>Title</th>
    <th>Description</th>
    <th> </th>
  </tr>

    <tr>
    	<td><%= @project.id %></td>
      <td><%= @project.title %></td>
      <td><%= @project.description %></td>

      <td><%= link_to 'Edit' , edit_project_path(@project) if policy(Project).edit? %></td>
        <td><%= link_to 'Delete' ,project_path(@project), method: :delete, data: {confirm: 'Are you Sure?'}  if policy(Project).destroy? %></td>

        <td><%= link_to 'Report Bug', new_project_bug_path(@project) if policy(Bug).new? %></td>
      <td><%= link_to 'Project Users' , project_users_path(@project) if policy(Project).users? %></td>
    </tr>
</table>


<% if @project.bugs.count > 0 %>
<h1>Feature & Bugs List</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Desription</th>
    <th>Type</th>
    <th>Deadline</th>
     <th>Status</th>
    <th>Image</th>
    <th>Assigned To</th>
  </tr>
<%= render @project.bugs  %>
</table>
<%  end %>

