
<%= form_for @project do |f| %>

  <% if @project.errors.any? %> <!-- checking if current post has any errors -->
  
  <h2>Errors: </h2>
  
  <ul>
    <% @project.errors.full_messages.each do |message| %> <!-- looping on errors,  -->
    <div class="alert-message"><li><%= message %></li></div> <!-- printing each error seperately -->
    <% end %>
  </ul> 
  
  <% end %>

  <div class = "txtb" >
    <%= f.label :title %>
    <%= f.text_field :title %><br>
  </div>

  <div class = "txtb">
    <%= f.label :description %>
    <%= f.text_area :description %> <br>
  </div>

  <div class= actions >
    <%= f.submit "Save Project", :class => "btn btn-success" %>
  </div>

<% end %>